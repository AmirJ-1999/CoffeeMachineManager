@page
@model CoffeeMachineManager.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center py-5">
    <img src="~/images/logo.png" alt="Coffee Machine Manager Logo" style="max-width: 100px;" />
    <h1 class="mt-3">Welcome to Coffee Machine Manager</h1>
    <p class="lead">Manage your coffee machines efficiently and effortlessly.</p>
</div>

<div class="container mt-5">
    @if (Model.UserRole == "Admin")
    {
        <!-- Admin View -->
        <h2 class="text-center">Admin Dashboard</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <a href="/User/ManageUsers" class="text-decoration-none">
                    <div class="card border-warning shadow">
                        <div class="card-body">
                            <h5 class="card-title text-warning">User Management</h5>
                            <p class="card-text">Easily add, edit, and remove users.</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/CoffeeMachines" class="text-decoration-none">
                    <div class="card border-warning shadow">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Coffee Machines</h5>
                            <p class="card-text">Manage coffee machines with ease.</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="/Reports" class="text-decoration-none">
                    <div class="card border-warning shadow">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Reports</h5>
                            <p class="card-text">View consumption logs and reports.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
    else if (Model.UserRole == "Employee")
    {
        <!-- Employee View -->
        <h2 class="text-center">Employee Dashboard</h2>
        <div class="row text-center">
            <div class="col-md-6">
                <a href="/CoffeeMachines" class="text-decoration-none">
                    <div class="card border-warning shadow">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Coffee Machines</h5>
                            <p class="card-text">View and manage coffee machines.</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="/Reports" class="text-decoration-none">
                    <div class="card border-warning shadow">
                        <div class="card-body">
                            <h5 class="card-title text-warning">Reports</h5>
                            <p class="card-text">Add and view consumption logs.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Default View -->
        <h2 class="text-center">Welcome to Coffee Machine Manager</h2>
        <p class="text-center">Please <a href="/Login">login</a> to continue.</p>
    }
</div>
