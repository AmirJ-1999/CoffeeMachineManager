@page
@model ManageUsersModel

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<p>Here you can view and manage all registered users.</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
