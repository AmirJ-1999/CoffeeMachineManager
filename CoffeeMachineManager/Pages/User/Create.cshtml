@page
@model CreateModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-white text-center">
                    <h3>Create User</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="User.Email" class="form-label">Email Address</label>
                            <input asp-for="User.Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="User.Password" class="form-label">Password</label>
                            <input asp-for="User.Password" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="User.Role" class="form-label">Role</label>
                            <select asp-for="User.Role" class="form-select">
                                <option value="" disabled selected>Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Employee">Employee</option>
                            </select>
                            <span asp-validation-for="User.Role" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-warning px-4 py-2">Create</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="ManageUsers" class="btn btn-link">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.RenderPartialAsync("_ValidationScriptsPartial")
}
