@page
@model CoffeeMachineManager.Pages.CreateCoffeeMachineModel

<h1>Add Coffee Machine</h1>

<div class="container mt-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="CoffeeMachine.Location" class="form-label">Location</label>
            <input asp-for="CoffeeMachine.Location" class="form-control" />
            <span asp-validation-for="CoffeeMachine.Location" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CoffeeMachine.Type" class="form-label">Type</label>
            <input asp-for="CoffeeMachine.Type" class="form-control" />
            <span asp-validation-for="CoffeeMachine.Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CoffeeMachine.Status" class="form-label">Status</label>
            <select asp-for="CoffeeMachine.Status" class="form-select">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
            </select>
            <span asp-validation-for="CoffeeMachine.Status" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Coffee Machine</button>
    </form>

    <div class="mt-3">
        <a asp-page="CoffeeMachines" class="btn btn-secondary">Back to List</a>
    </div>
</div>
